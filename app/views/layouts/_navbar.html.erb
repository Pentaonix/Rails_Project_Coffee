<nav class = "navbar">
  <%= link_to root_url, :class=> "brand-section" do %>
    <%= image_tag("logo.jpg", :class => "navbar-brand-logo")%>
    <p>The Coffee House</p>
  <% end %>

  <div class="links-section">
    <%= link_to "About Us", root_url%>
    <%= link_to "Order online", dishes_path%>
    <% if is_admin %>
      <%= link_to "Menus", menus_path %>
      <%= link_to "Users", users_path %>
      <%= link_to "Admin Dashboard", dashboard_path %>
    <% end %>
    <% if is_admin || (current_user && current_user.role == "Biller") %>
      <%= link_to "Orders", orders_path %>
    <% elsif current_user %>
      <%= link_to "Your Orders", my_orders_path(id: current_user.id) %>
    <% end %>
    
    <% if current_user %>
      Hi, <%= current_user.name %>!
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Sign Up", signup_path %>
      <%= link_to 'Log In', login_path %>
    <% end %>
  </div>
</nav>
