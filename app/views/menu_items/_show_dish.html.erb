<div class="Dish_Detail_View">
  <h2 class="Dish_Title"><%= @menu_item.name %></h2>
  <div class="Dish_detail_wrapper">
    <%= image_tag(@menu_item.picture, :class=>"Dish_Detail_Image") %>
    <% if edit == true %>
      <%= render :partial => "form", :locals => {menu_item: @menu_item, menu_id: @menu_item.menu_id, edit: true }%>
    <% else %>
      <div class="Dish_Details_Content">
        <p>
          <%= @menu_item.description%>
        </p>
        <div class="Dish_Detail_Price">
          Rs. <%= @menu_item.price %>
        </div>
        <%= link_to "Edit Dish" ,edit_menu_item_path(@menu_item), :class => "Menu_Button"%>
      </div>
    <% end %>
  </div>
</div>
